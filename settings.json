{
  "workbench.startupEditor": "none",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "terminal.integrated.copyOnSelection": true,
  "vim.useCtrlKeys": true,
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    // make splits great again
    {
      "before": ["<leader>", "\\"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "-"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    // make explorer great again
    {
      "before": ["<leader>", "g", "r"],
      "commands": ["workbench.files.action.showActiveFileInExplorer"],
      "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
      "before": ["<leader>", "t", "r"],
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },
    // Easy way to hide the peksy activitybar... boo activity bar
    {
      "before": ["<leader>", "a", "b"],
      "commands": ["workbench.action.toggleActivityBarVisibility"]
    },
    // Toggle zen mode
    {
      "before": ["<leader>", "z", "m"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    // Toggle minimap
    {
      "before": ["<leader>", "m", "m"],
      "commands": ["editor.action.toggleMinimap"]
    },
    // Toggle breadcrumb
    {
      "before": ["<leader>", "b", "c"],
      "commands": ["breadcrumbs.toggle"]
    },
    // Find and Repalce
    {
      "before": ["<leader>", "f", "r"],
      "commands": ["editor.action.startFindReplaceAction"]
    },
    // Text Search across files in repo
    {
      "before": ["<leader>", "s", "p"],
      "commands": ["workbench.view.search"]
    },
    // Find in files
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    // Select Tab by number
    {
      "before": ["<leader>", "1"],
      "commands": ["workbench.action.openEditorAtIndex1"]
    },
    {
      "before": ["<leader>", "2"],
      "commands": ["workbench.action.openEditorAtIndex2"]
    },
    {
      "before": ["<leader>", "3"],
      "commands": ["workbench.action.openEditorAtIndex3"]
    },
    {
      "before": ["<leader>", "4"],
      "commands": ["workbench.action.openEditorAtIndex4"]
    },
    {
      "before": ["<leader>", "5"],
      "commands": ["workbench.action.openEditorAtIndex5"]
    },
    {
      "before": ["<leader>", "6"],
      "commands": ["workbench.action.openEditorAtIndex6"]
    },
    {
      "before": ["<leader>", "7"],
      "commands": ["workbench.action.openEditorAtIndex7"]
    },
    {
      "before": ["<leader>", "8"],
      "commands": ["workbench.action.openEditorAtIndex8"]
    },
    {
      "before": ["<leader>", "9"],
      "commands": ["workbench.action.openEditorAtIndex9"]
    },
    {
      "before": ["<leader>", "m", "p"],
      "commands": ["markdown.showPreviewToSide"]
    }
  ],
  "editor.lineNumbers": "on",
  "editor.fontSize": 12,
  "editor.renderWhitespace": "none",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "files.autoSave": "onFocusChange",
  "redhat.telemetry.enabled": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "breadcrumbs.enabled": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "aws.profile": "profile:default",
  "files.associations": {
    "*.json ": "ssm-json"
  },
  "editor.minimap.enabled": false,
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontWeight": "450",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "workbench.colorTheme": "Visual Studio Light"
}
